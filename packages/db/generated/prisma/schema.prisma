generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  todos    Todo[]
}

model Todo {
  id     String  @id @default(uuid())
  task   String
  done   Boolean @default(false)
  userId String
  user   User    @relation(references: [id], fields: [userId])
}
